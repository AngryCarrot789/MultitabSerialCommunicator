<Controls:MetroWindow x:Class="MultitabSerialCommunicator.MainWindow"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultitabSerialCommunicator"
        xmlns:views="clr-namespace:MultitabSerialCommunicator.Views"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      mc:Ignorable="d"
        Title="Multitab Serial Communicator" 
        Height="675" Width="1200"
        Background="#252525"
        WindowTitleBrush="#FF3C3C3C" 
        NonActiveBorderBrush="#FF2B2B2B" 
        NonActiveGlowBrush="#FF2B2B2B" 
        NonActiveWindowTitleBrush="#FF323232" 
        OverlayBrush="#FF272727" 
        BorderBrush="#FF323232">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <DockPanel>
        <StackPanel>
            <Button Command="{Binding NewTabCommand}" 
                    Background="{x:Null}" BorderBrush="{x:Null}" 
                    Margin="1" ToolTip="New File" 
                    Focusable="False" 
                    Style="{StaticResource MaterialDesignRaisedDarkButton}" Height="60" Width="60">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                    <TextBlock Text="Add"/>
                </StackPanel>
            </Button>
            <Button Content="Info" Command="{Binding ShowInfoCommand}" Background="{x:Null}" BorderBrush="{x:Null}"/>
        </StackPanel>
        <dragablz:TabablzControl 
            ItemsSource="{Binding Tabs, UpdateSourceTrigger=PropertyChanged}" 
            SelectedIndex="{Binding SelectedIndex,UpdateSourceTrigger=PropertyChanged}" Background="#FF1B1B1B" BorderBrush="{x:Null}">
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController InterTabClient="{Binding InterTabClient}" />
            </dragablz:TabablzControl.InterTabController>
        </dragablz:TabablzControl>
    </DockPanel>
</Controls:MetroWindow>
