<Window x:Class="MultitabSerialCommunicator.Views.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultitabSerialCommunicator.Views"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStyle="ToolWindow"
        Title="Rename Window" Height="160" Width="500" Closing="Window_Closing"
        Background="{DynamicResource BackgroundColour}">
    <Grid>
        <TextBox x:Name="rnameTxt" KeyDown="rnameTxt_KeyDown"
                 Height="37" Margin="10,10,10,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top" 
                 FontSize="20" Padding="3"/>
        <Button Content="Rename Header" Margin="10,52,10,10" FontSize="24" Click="Button_Click"/>

    </Grid>
</Window>
