<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultitabSerialCommunicator.Views"
             xmlns:multitabserialcommunicator="clr-namespace:MultitabSerialCommunicator"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="MultitabSerialCommunicator.Views.SerialView"
             mc:Ignorable="d" Width="656" Height="407">
    <UserControl.DataContext>
        <multitabserialcommunicator:SerialViewModel/>
    </UserControl.DataContext>
    <Grid>
        <DockPanel>
            <Grid Width="259">
                <GroupBox Header="Variables" Height="164" VerticalAlignment="Top" BorderBrush="#CC363636" Background="#CC363636">
                    <Grid>
                        <Label Content="Baud:"      HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Label Content="DataBits:"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,26,0,0"/>
                        <Label Content="StopBits:"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,52,0,0"/>
                        <Label Content="Parity:"    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,78,0,0"/>
                        <Label Content="Handshake:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,104,0,0"/>

                        <ComboBox SelectedItem="{Binding SVMBaudRate, UpdateSourceTrigger=PropertyChanged}"  ItemsSource="{Binding SerialDataCollections.BaudRates}" HorizontalAlignment="Left" Height="23" Margin="76,0,0,0"   VerticalAlignment="Top" Width="173" BorderBrush="{x:Null}"/>
                        <ComboBox SelectedItem="{Binding SVMDataBits, UpdateSourceTrigger=PropertyChanged}"  ItemsSource="{Binding SerialDataCollections.Databits}" HorizontalAlignment="Left" Height="23" Margin="76,26,0,0"  VerticalAlignment="Top" Width="173" BorderBrush="{x:Null}"/>
                        <ComboBox SelectedItem="{Binding SVMStopbits, UpdateSourceTrigger=PropertyChanged}"  ItemsSource="{Binding SerialDataCollections.Stopbits}" HorizontalAlignment="Left" Height="23" Margin="76,52,0,0"  VerticalAlignment="Top" Width="173" BorderBrush="{x:Null}"/>
                        <ComboBox SelectedItem="{Binding SVMParity, UpdateSourceTrigger=PropertyChanged}"    ItemsSource="{Binding SerialDataCollections.Parities}" HorizontalAlignment="Left" Height="23" Margin="76,78,0,0"  VerticalAlignment="Top" Width="173" BorderBrush="{x:Null}"/>
                        <ComboBox SelectedItem="{Binding SVMHandShake, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding SerialDataCollections.Handshakes}" HorizontalAlignment="Left" Height="23" Margin="76,104,0,-1" VerticalAlignment="Top" Width="173" BorderBrush="{x:Null}"/>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Ports and Connectivity" Margin="0,164,0,0" BorderBrush="#CC363636" Background="#CC363636">
                    <Grid>
                        <Label Content="COM Ports Avaliable" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ListBox SelectedItem="{Binding SVMPortName, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Ports, UpdateSourceTrigger=PropertyChanged}" x:Name="ports" Margin="0,26,0,77"/>
                        <Button Command="{Binding ConnectToPort}" Content="{Binding ButtonText, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" Height="40" BorderBrush="#FF3E3E3E"/>
                        <Button Command="{Binding RefreshCOMsList}" Content="Refresh List" Margin="0,0,131,45" VerticalAlignment="Bottom" BorderBrush="#FF3E3E3E"/>
                    </Grid>
                </GroupBox>

            </Grid>
            <GroupBox Header="Messages" Margin="2 0 0 0" BorderBrush="#CC363636" Background="#CC363636">
                <Grid>
                    <TextBox Text="{Binding SendText, UpdateSourceTrigger=PropertyChanged}" x:Name="messageText" Height="32" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="95,0,0,0" BorderBrush="#FF3E3E3E" FontSize="14" mah:ControlsHelper.FocusBorderBrush="#FF4B4B4B" mah:ControlsHelper.MouseOverBorderBrush="#FF363636"/>
                    <Button Command="{Binding SendSerialMessage}" Content="send" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="90" BorderBrush="#FF3E3E3E" Height="32"/>
                    <TextBox Text="{Binding MainText, UpdateSourceTrigger=PropertyChanged}" Margin="0,26,0,37" TextWrapping="Wrap" BorderBrush="#FF3E3E3E" mah:ControlsHelper.FocusBorderBrush="#FF3E3E3E" mah:ControlsHelper.MouseOverBorderBrush="#FF515151" FontSize="14"/>
                    <Label Content="Transceived Messages" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
            </GroupBox>
        </DockPanel>
    </Grid>
</UserControl>
