<UserControl x:Class="MultitabSerialCommunicator.Views.SerialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultitabSerialCommunicator.Views"
             xmlns:multitabserialcommunicator="clr-namespace:MultitabSerialCommunicator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <multitabserialcommunicator:SerialViewModel/>
    </UserControl.DataContext>
    <GroupBox Header="Main">
        <Grid>
            <DockPanel>
                <Grid Width="259">
                    <Label Content="Baud:"      HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label Content="DataBits:"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,26,0,0"/>
                    <Label Content="StopBits:"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,52,0,0"/>
                    <Label Content="Parity:"    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,78,0,0"/>
                    <Label Content="Handshake:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,104,0,0"/>

                    <TextBox Text="{Binding SVMBaudRate, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="139,0,0,0"   TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>
                    <TextBox Text="{Binding SVMDataBits, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="139,26,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>
                    <TextBox Text="{Binding SVMStopbits, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="139,52,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>
                    <TextBox Text="{Binding SVMParity, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="139,78,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>
                    <TextBox Text="{Binding SVMHandShake, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="139,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderBrush="{x:Null}"/>
                    <Label Content="COM Ports Avaliable" HorizontalAlignment="Left" Margin="0,130,0,0" VerticalAlignment="Top"/>
                    <ListBox SelectedItem="{Binding SVMPortName, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Ports, UpdateSourceTrigger=PropertyChanged}" x:Name="ports" Margin="0,156,0,77"/>
                    <Button Command="{Binding ConnectToPort}" Content="{Binding ButtonText, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" Height="40" BorderBrush="#FF3E3E3E"/>
                    <Button Command="{Binding RefreshCOMsList}" Content="Refresh List" Margin="0,0,0,45" VerticalAlignment="Bottom" BorderBrush="#FF3E3E3E"/>

                </Grid>
                <Grid>
                    <TextBox Text="{Binding SendText, UpdateSourceTrigger=PropertyChanged}" x:Name="messageText" Height="22" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="90,0,0,0" BorderBrush="#FF3E3E3E"/>
                    <Button Command="{Binding SendSerialMessage}" Content="send" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="75" Margin="10,0,0,0" BorderBrush="#FF3E3E3E"/>
                    <TextBox Text="{Binding MainText, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,32" TextWrapping="Wrap" BorderBrush="#FF3E3E3E"/>

                </Grid>
            </DockPanel>
        </Grid>
    </GroupBox>
</UserControl>
